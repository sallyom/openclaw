{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "noCheck": true,
    "transpileOnly": true,
    "isolatedModules": true
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["index.ts", "src/**/*"],
  "exclude": ["node_modules", "dist"]
}
